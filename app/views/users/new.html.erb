<h1>Sign Up</h1>

<% if flash[:messages] %>
  <% flash[:messages].each do |message| %>
  <%= message %>
  <br>
  <% end %>
<% end %>
</br>


<%= form_for @new_user do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %> 
    <br /> 
    <br />
    <%= f.label :username %>
    <%= f.text_field :username %> 
    <br /> 
    <br />
    <%= f.submit "Create Account"%>
 <% end %>

 </br>
