<h1> <%= @picture.user.username %>'s Picture </h1>

<ul>
  <li>
    Title: <%= @picture.title %>
  </li>
  <li>
    <img  class="picture" alt=<%= @picture.title %> src=<%= @picture.image %>/>
  </li>
  <li>
    Tags:
      <ul>
        <% @picture.picture_tags.each do |pic_tag| %>
          <li>
          <%= pic_tag.tag.name %>
          </li>
          <% end %>
      </ul>
  </li>
  </br>
  <li>
    Comments:
      <ul>
        <% @picture.comments.each do |comment| %>
          <li>
          <%= comment.user.username %> - <%= comment.content %> 
          </li>
          <% end %>
      </ul>
  </li>
</br>
  <%= button_to "Leave Comment", new_comment_path, method: "get" %>
  </br>
  <%= button_to "All Pictures", pictures_path, method: "get" %>
</ul>
<%= button_to "Delete This Picture", picture_path(@picture),  method: "delete" , data: {confirm: "Remove Forever?"} %>


